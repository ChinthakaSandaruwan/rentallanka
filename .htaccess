# Root .htaccess for RentalLanka (XAMPP)

# Enable URL rewriting
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Canonical host: prefer non-www on production
  RewriteCond %{HTTP_HOST} ^www\.rentallanka\.com$ [NC]
  RewriteRule ^ https://rentallanka.com%{REQUEST_URI} [L,R=301]

  # Force HTTPS on non-local hosts; allow HTTP on localhost/127.0.0.1
  RewriteCond %{HTTPS} !=on
  RewriteCond %{HTTP:X-Forwarded-Proto} !https
  RewriteCond %{HTTP_HOST} !^localhost(:[0-9]+)?$ [NC]
  RewriteCond %{HTTP_HOST} !^127\.0\.0\.1(:[0-9]+)?$ [NC]
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Shortcut like WordPress: /rl-admin -> admin login (works on localhost and production)
  # Localhost (project in /rentallanka)
  RewriteCond %{HTTP_HOST} ^(localhost|127\.0\.0\.1)(:[0-9]+)?$ [NC]
  RewriteRule ^rl-admin/?$ /rentallanka/admin/auth/admin_login.php [L,QSA]
  
  # Production (project at domain root)
  RewriteCond %{HTTP_HOST} !^(localhost|127\.0\.0\.1)(:[0-9]+)?$ [NC]
  RewriteRule ^rl-admin/?$ /admin/auth/admin_login.php [L,QSA]

  # Skip existing files/directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Route all other requests to index.php
  RewriteRule ^ index.php [L,QSA]
</IfModule>

# Security: block access to sensitive files
<FilesMatch "^(\.env|\.git|\.svn|composer\.(json|lock)|package\.(json|lock)|.+\.(sql|bak|ini|log))$">
  Require all denied
</FilesMatch>

# MIME and default charset
AddDefaultCharset utf-8

# Basic security headers (safe defaults)
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "no-referrer-when-downgrade"
  Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Compression for text assets
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# Prefer Brotli when available (falls back to gzip/deflate above)
<IfModule mod_brotli.c>
  BrotliCompressionQuality 5
  AddOutputFilterByType BROTLI_COMPRESS text/plain text/html text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# Helpful caching headers for proxies/browsers
<IfModule mod_headers.c>
  Header append Vary "Accept-Encoding" env=!dont-vary
</IfModule>

# Cache static assets (longer lifetimes; pair with filename versioning)
<IfModule mod_expires.c>
  ExpiresActive On
  # Styles and scripts
  ExpiresByType text/css "access plus 30 days"
  ExpiresByType application/javascript "access plus 30 days"
  ExpiresByType text/javascript "access plus 30 days"
  # Images
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  # Fonts
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff  "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  ExpiresByType application/font-woff  "access plus 1 year"
</IfModule>

# Strong cache-control for immutable static assets
<IfModule mod_headers.c>
  # Images and fonts: safe to cache for a long time
  <FilesMatch "\.(?:avif|webp|svg|ico|jpg|jpeg|png|gif|woff2?|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  # CSS/JS: moderate TTL unless versioned; increase later if using file hashes
  <FilesMatch "\.(?:css|js)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
</IfModule>
